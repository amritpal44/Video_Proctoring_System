# MongoDB connection URI
MONGO_URI=mongodb://localhost:27017/videoProctoring

# JWT secret used for signing auth tokens. Change this in production.
JWT_SECRET=replace_with_a_strong_random_secret

# Server port
PORT=4000

# Dev seed user credentials (optional)
SEED_ADMIN_EMAIL=admin@example.com
SEED_ADMIN_PASS=adminpass
SEED_INTERVIEWER_EMAIL=interviewer@example.com
SEED_INTERVIEWER_PASS=interviewerpass

# Cookie name used for auth
AUTH_COOKIE_NAME=sid


# Frontend origin used for CORS and socket.io during development
# e.g. Vite default: http://localhost:5173
FRONTEND_ORIGIN=http://localhost:5173

# Set to 1 to require sockets to authenticate during the handshake
# Otherwise unauthenticated sockets are allowed (useful for local testing)
REQUIRE_SOCKET_AUTH=1
